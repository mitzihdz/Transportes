<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0">Administración de Marcas</h1>
            </div><!-- /.col -->
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a class="breadcumText"  href="~/Home">Home</a></li>
                    <li class="breadcrumb-item breadcumText">Administración de Marcas</li>
                </ol>
            </div><!-- /.col -->
        </div><!-- /.row -->
    </div><!-- /.container-fluid -->
</div>

<div class="card card-default">
    <div class="card-header">
        <h3 class="card-title">Listado general de Marcas</h3>
    </div>
    <!-- /.card-header -->
    <div class="card-body">
        <div class="row">
            <div class="col-md-10">
                &nbsp;    
            </div>
            <div class="col-md-2">
                <button type="button" class="btn btn-block btn-info btn-sm" onclick="OpenNew();">
                  Nueva Marca
                </button>
            </div>
        </div>
        <br />
        <div class="row">
             <div class="col-12">
                 <table id="tblMarcas" class="table table-bordered table-hover">
                    <thead>
                        <tr>
                            <th class="col-md-10">Marca</th>
                            <th class="col-md-1">Editar</th>
                            <th class="col-md-1">Eliminar</th>
                        </tr>
                    </thead>
                    <tbody></tbody>
                </table>
             </div>
        </div>
    </div>
</div>

<div id="modalMarca" class="modal" tabindex="-1" role="dialog">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Nueva Marca</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
       <form id="fmNuevaMarca">
           <div class="row">
               <div class="col-md-12">
                <div class="form-group">
                    <label for="txtMarca">Nombre Marca</label>
                    <input class="form-control form-control-sm" type="text" id="txtMarca" name="Marca" style="text-transform:uppercase" maxlength="200"> 
                </div>
            </div>
           </div>
       </form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
        <button type="button" id="BtnNuevaMarca" class="btn btn-primary">Agregar</button>
      </div>
    </div>
  </div>
</div>

<div id="modalEditMarca" class="modal" tabindex="-1" role="dialog">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Actualiza Marca</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
       <form id="fmEditMarca">
           <input type="hidden" id="IdMarca" />
           <div class="row">
               <div class="col-md-12">
                <div class="form-group">
                    <label for="txtEditMarca">Nombre Marca</label>
                    <input class="form-control form-control-sm" type="text" id="txtEditMarca" name="MarcaEdit" style="text-transform:uppercase" maxlength="200"> 
                </div>
            </div>
           </div>
       </form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
        <button type="button" id="BtnEditaMarca" class="btn btn-primary">Guardar</button>
      </div>
    </div>
  </div>
</div>