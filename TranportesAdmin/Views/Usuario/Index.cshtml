<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0">Administración de Usuarios</h1>
            </div><!-- /.col -->
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="~/Home">Home</a></li>
                    <li class="breadcrumb-item">Administración de Usuarios</li>
                </ol>
            </div><!-- /.col -->
        </div><!-- /.row -->
    </div><!-- /.container-fluid -->
</div>

<div class="card card-default">
    <div class="card-header">
        <h3 class="card-title">Listado general de usuarios</h3>
    </div>
    <!-- /.card-header -->
    <div class="card-body">
        <div class="row">
            <div class="col-md-10">
                &nbsp;    
            </div>
            <div class="col-md-2">
                <button type="button" class="btn btn-block btn-info btn-sm" onclick="OpenNew();">
                  Nuevo Usuario
                </button>
            </div>
        </div>
        <br />
        <div class="row">
             <div class="col-12">
                 <table id="tblUsuarios" class="table table-bordered table-hover">
                    <thead>
                        <tr>
                            <th class="col-md-5">Usuario</th>
                            <th class="col-md-5">Perfil</th>
                            <th class="col-md-1">Editar</th>
                            <th class="col-md-1">Eliminar</th>
                        </tr>
                    </thead>
                    <tbody></tbody>
                </table>
             </div>
        </div>
    </div>
</div>

<div id="modalUser" class="modal" tabindex="-1" role="dialog">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Nuevo usuario</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
       <form id="frmNewUser">
           <div class="row">
               <div class="col-md-12">
                   <div class="form-group">
                       <label for="ddlPerfil">Perfil</label>
                       <select class="form-control form-control-sm" id="ddlPerfil" name="Perfil"></select>               
                   </div>
               </div>
           </div>
           <div class="row">
               <div class="col-md-12">
                   <div class="form-group">
                        <label for="txtUsuario">Usuario</label>
                        <input class="form-control form-control-sm" type="text" id="txtUsuario" name="Usuario" style="text-transform:uppercase" maxlength="200">               
                   </div>
               </div>
           </div>
           <div class="row">
               <div class="col-md-12">
                   <div class="form-group">
                        <label for="txtPassword">Contraseña</label>
                        <input class="form-control form-control-sm" type="password" id="txtPassword" name="Password" style="text-transform:uppercase" maxlength="200">               
                   </div>
               </div>
           </div>
           <div class="row">
               <div class="col-md-12">
                   <div class="form-group">
                        <label for="txtConfirmPassword">Confirma Contraseña</label>
                        <input class="form-control form-control-sm" type="password" id="txtConfirmPassword" name="ConfirmPassword" style="text-transform:uppercase" maxlength="200">               
                   </div>
               </div>
           </div>
       </form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
        <button type="button" id="BtnNuevoUsuario" class="btn btn-primary">Agregar</button>
      </div>
    </div>
  </div>
</div>

<div id="modalEditUser" class="modal" tabindex="-1" role="dialog">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Actualiza usuario</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
       <form id="frmEditUser">
           <input type="hidden" id="IdUsuario" />
           <div class="row">
               <div class="col-md-12">
                   <div class="form-group">
                       <label for="ddlPerfil">Perfil</label>
                       <select class="form-control form-control-sm" id="ddlPerfilEdit" name="PerfilEdit"></select>               
                   </div>
               </div>
           </div>
           <div class="row">
               <div class="col-md-12">
                   <div class="form-group">
                        <label for="txtUsuario">Usuario</label>
                        <input class="form-control form-control-sm" type="text" id="txtUsuarioEdit" name="UsuarioEdit" style="text-transform:uppercase" maxlength="200">               
                   </div>
               </div>
           </div>
           <div class="row">
               <div class="col-md-12">
                   <div class="form-group">
                        <label for="txtPassword">Contraseña</label>
                        <input class="form-control form-control-sm" type="password" id="txtPasswordEdit" name="PasswordEdit" style="text-transform:uppercase" maxlength="200">               
                   </div>
               </div>
           </div>
           <div class="row">
               <div class="col-md-12">
                   <div class="form-group">
                        <label for="txtConfirmPassword">Confirma Contraseña</label>
                        <input class="form-control form-control-sm" type="password" id="txtConfirmPasswordEdit" name="ConfirmPasswordEdit" style="text-transform:uppercase" maxlength="200">               
                   </div>
               </div>
           </div>
       </form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
        <button type="button" id="BtnEditaUsuario" class="btn btn-primary">Guardar</button>
      </div>
    </div>
  </div>
</div>
