<div class="card card-default">
    <div class="card-header">
        <h3 class="card-title">Listado general de solicitudes</h3>
    </div>
    <!-- /.card-header -->
    <div class="card-body">
        <div class="row">
            <div class="col-md-10">
                &nbsp;
            </div>
            <div class="col-md-2">
                <a class="btn btn-block btn-info btn-sm" href="~/Solicitud/Agregar">Nueva Solicitud</a>
            </div>
        </div>
        <br />
        <div class="row">
             <div class="col-12">
                 <table id="tblSolicitud" class="table table-bordered table-hover">
                    <thead>
                        <tr>
                            <th>Folio</th>
                            <th>Cliente</th>
                            <th>Ubicacion Origen</th>
                            <th>Ubicacion Destino</th>
                            <th>Fecha</th>    
                            <th>Editar</th>
                            <th>Eliminar</th>
                        </tr>
                    </thead>
                    <tbody></tbody>
                </table>
             </div>
        </div>
    </div>
</div>
