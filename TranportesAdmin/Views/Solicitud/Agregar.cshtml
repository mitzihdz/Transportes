        </div><!-- /.container-fluid -->
    </div>
</section>

<section>
    <!-- Card ADD -->
    <div id="cardSolicitud" class="card card-default">
        <form id="fmSolicitud">
              <div class="card-header">
                <h3 class="card-title">Información general de la solicitud</h3>
                <div class="card-tools">
                  <button type="button" class="btn btn-tool" data-card-widget="collapse">
                    <i class="fas fa-sort-down"></i>
                  </button>
                </div>
              </div>          
              <div class="card-body">
                <div class="row">
                  <div class="col-md-6">
                    <div class="form-group">
                        <label for="txtClave">Cliente *</label>
                        <input autocomplete="off" list="clientes" class="form-control form-control-sm" id="txtCliente" name="Cliente" style="text-transform:uppercase" maxlength="200">
                        <datalist id="clientes">

                        </datalist>
                    </div>
                  </div>
                </div>
                <div class="row">
                    <div class="col-md-4">
                        <div class="form-group">
                            <label for="txtFecha">Fecha *</label>
                            <input class="form-control form-control-sm" type="date" id="txtFecha" name="Fecha" style="text-transform:uppercase" maxlength="200">
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                        <label for="txtUbiDes">Ubicación Destino *</label>
                        <input list="ubicacionDes" class="form-control form-control-sm" type="text" id="txtUbiDes" name="UbiDes" style="text-transform:uppercase" maxlength="200">
                        <datalist id="ubicacionDes">
                            <option value="Ubicación Destino 1"></option>
                            <option value="Ubicación Destino 2"></option>
                            <option value="Ubicación Destino 3"></option>
                            <option value="Ubicación Destino 4"></option>
                        </datalist>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            <label for="txtUbiOrigen">Ubicación Origen *</label>
                            <input list="ubicacionOrigen" class="form-control form-control-sm" type="text" id="txtUbiOrigen" name="UbiOrigen" style="text-transform:uppercase" maxlength="200">
                            <datalist id="ubicacionOrigen">
                                <option value="Ubicación Origen 1"></option>
                                <option value="Ubicación Origen 2"></option>
                                <option value="Ubicación Origen 3"></option>
                                <option value="Ubicación Origen 4"></option>
                            </datalist>
                        </div>
                    </div>
                </div>
              </div>
              <div id="cardSolicitud" class="card card-default collapsed-card">
                <div class="card-header">
                    <h3 class="card-title">Detalle de la Solicitud</h3>
                    <div class="card-tools">
                        <button type="button" class="btn btn-tool" data-card-widget="collapse">
                            <i class="fas fa-sort-down"></i>
                        </button>
                    </div>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="txtOperador">Operador *</label>
                                <input autocomplete="off" list="operador" class="form-control form-control-sm" type="text" id="txtOperador" name="Operador" style="text-transform:uppercase" maxlength="200">
                                <datalist id="operador">
                                </datalist>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class='form-group'>
                                <label for="Tractor">Tractor *</label>
                                <input autocomplete="off" list="tractor" class="form-control form-control-sm" type="text" id="txtTractor" name="Tractor" style="text-transform:uppercase" maxlength="20">
                                <datalist id="tractor">
                                </datalist>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="CajaUno">Caja *</label>
                                <input autocomplete="off" list="caja" class="form-control form-control-sm" type="text" id="txtCaja" name="Caja" style="text-transform:uppercase" maxlength="20">
                                <datalist id="caja">
                                </datalist>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card-footer">
                    <div class="row">
                        <div class="col-md-6">
                            &nbsp;
                        </div>
                        <div class="col-md-3">
                            <button id="añadirOperador" class="btn btn-block btn-success btn-xs" type="button">Añadir</button>
                        </div>
                    </div>
                    <div class="row">
                         <div class="col-12">
                             <table id="otroOperador" class="table table-bordered table-hover">
                                <thead>
                                    <tr>
                                        <th>Operador</th>
                                        <th>Tractor</th>
                                        <th>Caja Uno</th>
                                        <th>Caja Dos</th>
                                        <th>Eliminar</th>
                                    </tr>
                                </thead>
                                <tbody></tbody>
                            </table>
                         </div>
                    </div>
                </div>  
              </div>
              <div class="card-footer">
                <div class="row">
                    <div class="col-md-6">
                        &nbsp;
                    </div>
                    <div class="col-md-3">
                        <a class="btn btn-block btn-default btn-xs" href="~/Solicitud">Cancelar</a>
                    </div>
                    <div class="col-md-3">
                        <button type="button" id="form1" class="btn btn-block btn-success btn-xs">Agregar</button>
                    </div>
                </div>
              </div>
         </form>
     </div>
</section>

