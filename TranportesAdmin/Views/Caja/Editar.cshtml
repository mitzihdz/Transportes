@section Scripts {
    <script src="~/js/CajaEdit.js"></script>
    <script src="~/js/Alerts.js"></script>
    <!-- jquery-validation -->
    <script src="~/plugins/jquery-validation/jquery.validate.min.js"></script>
    <script src="~/plugins/jquery-validation/additional-methods.min.js"></script>

    <!-- bs-custom-file-input -->
   <script src="~/plugins/bs-custom-file-input/bs-custom-file-input.min.js"></script>
}

<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0">Administración de cajas del proveedor <label id="LblProveedor"></label></h1>
            </div><!-- /.col -->
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a class="breadcumText" href="~/Home">Home</a></li>
                    <li class="breadcrumb-item"><a class="breadcumText" href="~/Proveedor">Admin Proveedores</a></li>
                    <li class="breadcrumb-item"><a class="breadcumText" href="~/Proveedor/Editar/@ViewBag.IdProveedor">Proveedor</a></li>
                    <li class="breadcrumb-item breadcumText active">Editar Caja</li>
                </ol>
            </div><!-- /.col -->
        </div><!-- /.row -->
    </div><!-- /.container-fluid -->
</div>

<div class="card card-default">
    <div class="card-header">
        <h3 class="card-title">Información general de la caja</h3>
    </div><!-- /.card-header -->

    <form id="fmCaja">
        <input id="IdProveedor" type="hidden" value=@ViewBag.IdProveedor />
        <input id="IdCaja" type="hidden" value=@ViewBag.IdCaja />
        <div class="card-body">
            <div class="row">
              <div class="col-md-3">
                  <div class="form-group">
                      <label for="txtNoEconomico">No. Económico</label>
                      <input class="form-control form-control-sm" type="text" id="txtNoEconomico" name="NoEconomico" style="text-transform:uppercase" maxlength="200"> 
                  </div>
              </div>
              <div class="col-md-3">
                  <div class="form-group">
                      <label for="txtPlacas">Placas</label>
                      <input class="form-control form-control-sm" type="text" id="txtPlacas" name="Placas" style="text-transform:uppercase" maxlength="200"> 
                  </div>
              </div>
              <div class="col-md-3">
                  <div class="form-group">
                      <label for="txtDimension">Dimensiones</label>
                      <input class="form-control form-control-sm" type="text" id="txtDimension" name="Dimension" style="text-transform:uppercase" maxlength="200"> 
                  </div>
              </div>
           </div>
           <div class="row">
              <div class="col-md-6">
                  <div class="form-group">
                      <label for="ddlMarca">Marca</label>
                      <select class="form-control form-control-sm" id="ddlMarca" name="Marca" required></select>
                  </div>
              </div>
              <div class="col-md-3">
                  <div class="form-group">
                      <label for="txtAnio">Año Modelo</label>
                      <input class="form-control form-control-sm" type="text" id="txtAnio" name="Anio" style="text-transform:uppercase" maxlength="200"> 
                  </div>
              </div>
           </div>
        </div>
    </form>

    <div class="card-footer">
        <div class="row">
            <div class="col-md-3">
                &nbsp;
            </div>
            <div class="col-md-3">
                <a class="btn btn-block btn-default btn-xs" href="~/Proveedor/Editar/@ViewBag.IdProveedor">Cancelar</a>
            </div> 
            <div class="col-md-3">
                <button style="background-color: indianred; color: white;" id="BtnEditaCaja" class="btn btn-block btn-xs">Editar</button>
            </div>
        </div>     
    </div>
</div>

<!-- /.Documentos -->

<div id="cardDocumentos" class="card card-default">
    <div class="card-header">
        <h3 class="card-title">Documentación</h3>
        <div class="card-tools">
            <button type="button" class="btn btn-tool" data-card-widget="collapse">
                <i class="fas fa-minus"></i>
            </button>
            <button type="button" class="btn btn-tool" data-card-widget="remove">
                <i class="fas fa-times"></i>
            </button>
        </div>
    </div>
   

    <div class="card-body">
        <div class="row">
            <div class="col-md-1">
                &nbsp;    
            </div>
             <div class="col-md-6">
                 <table id="tblDocumentos" style="border:none">
                    <thead>
                        <tr>
                            <th class="col-md-5"></th>                            
                            <th class="col-md-1"></th>
                            <th class="col-md-1"></th>
                        </tr>
                    </thead>
                    <tbody></tbody>
                </table>
             </div>
             <div class="col-md-2">
                <button style="background-color: indianred; color: white;" type="button" class="btn btn-block btn-sm" onclick="OpenNew();">
                  Nuevo Documento
                </button>
            </div>
        </div>
    </div>
</div>


<div id="modalDocumento" class="modal" tabindex="-1" role="dialog">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Agregar Documento</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <form id="fmNewDocument">
      <div class="modal-body"> 
           <div class="row">
              <div class="col-md-8">
                  <div class="form-group">
                      <label for="ddlDocumento">Documento</label>
                      <select class="form-control form-control-sm" id="ddlDocumento" name="Documento"></select>
                  </div>
              </div>
           </div>
           <div class="row">
               <div class="form-group">
                   <div class="col-md-12">
                       <div class="input-group">
                           <div class="custom-file">
                               <input type="file" class="custom-file-input" id="fileInput" name="Archivo">
                               <label class="custom-file-label" for="fileInput" id="lblFileInput"></label>
                           </div>
                           <div class="input-group-append">
                               <button style="background-color: indianred; color: white;" type="button" id="fileButton" class="input-group-text btn-primary">Subir Documento</button>
                           </div>
                       </div>
                   </div> 
               </div>
           </div>
      </div>
      </form>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
      </div>
    </div>
  </div>
</div>


