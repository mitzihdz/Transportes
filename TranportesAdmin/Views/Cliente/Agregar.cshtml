@section Scripts {
    <script src="~/js/ClienteAdd.js"></script>
    <script src="~/js/Alerts.js"></script>
    <!-- jquery-validation -->
    <script src="~/plugins/jquery-validation/jquery.validate.min.js"></script>
    <script src="~/plugins/jquery-validation/additional-methods.min.js"></script>

}

<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0">Administración de clientes</h1>
            </div><!-- /.col -->
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">Home</a></li>
                    <li class="breadcrumb-item"><a href="~/Tractor">Admin Clientes</a></li>
                    <li class="breadcrumb-item active">Agregar</li>
                </ol>
            </div><!-- /.col -->
        </div><!-- /.row -->
    </div><!-- /.container-fluid -->
</div>

<div class="card card-default">
    <div class="card-header">
        <h3 class="card-title">Información general del cliente</h3>
    </div>
    <!-- /.card-header -->
    <form id="fmCliente">

    
    <div class="card-body">
        <div class="row">
            <div class="col-md-9">
                <div class="form-group">
                    <label for="txtRazon">Razón Social</label>
                    <input class="form-control form-control-sm" type="text" id="txtRazonSocial" name="RazonSocial" style="text-transform:uppercase" maxlength="200"> 
                </div>
            </div>
        </div>
        <!-- /.row -->
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label for="txtClave">Identificador</label>
                    <input class="form-control form-control-sm" type="text" id="txtIdentificador" name="Identificador" style="text-transform:uppercase" maxlength="200"> 
                </div>
            </div>
            <div class="col-md-3">
                <div class="form-group">
                    <label for="txtClave">RFC</label>
                    <input class="form-control form-control-sm" type="text" id="txtRFC" name="RFC" style="text-transform:uppercase" maxlength="20"> 
                </div>
            </div>
        </div>
        <!-- /.row -->
    </div>
    </form>
    <!-- /.card-body -->
    <div class="card-footer">
        <div class="row">
            <div class="col-md-3">
                &nbsp;
            </div>
            <div class="col-md-3">
                <a class="btn btn-block btn-default btn-xs" href="~/Cliente">Cancelar</a>
            </div> 
            <div class="col-md-3">
                <button id="BtnNuevoCliente" class="btn btn-block btn-success btn-xs">Agregar</button>
            </div>
        </div>     
    </div>
    <!-- /.card-footer -->
</div>
<!-- /.card -->

