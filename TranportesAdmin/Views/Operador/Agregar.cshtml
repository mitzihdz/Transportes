                    <div class="form-group">
                      <label>Entidad federativa</label>
                      <input class="form-control form-control-sm" type="text" id="txtEntidad" name="Entidad" style="text-transform:uppercase" maxlength="200">
                    </div>
                 </div>      
                <div class="col-md-6">
                    <div class="form-group">
                        <label>Referencias del domicilio</label>
                        <input class="form-control form-control-sm" type="text" id="txtReferencia" style="text-transform:uppercase" maxlength="200">
                    </div>
                </div>
              
            </div>
            <!-- /.row -->

          </div>
          </form>

          <!-- /.card-body -->
          <div class="card-footer">
              <div class="row">
                  <div class="col-md-6">
                        &nbsp;
                    </div>
                    <div class="col-md-3">
                        <a class="btn btn-block btn-default btn-xs" href="~/Operador">Cancelar</a>
                    </div>
                    <div class="col-md-3">
                        <button id="BtnNuevoDomicilio" class="btn btn-block btn-success btn-xs" type="submit">Agregar</button>
                    </div>
              </div>
          </div>
                    
        </div>
