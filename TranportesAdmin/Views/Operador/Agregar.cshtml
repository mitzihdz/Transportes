            <!-- Card ADD -->
        <div id="cardOperador" class="card card-default">
          <div class="card-header">
            <h3 class="card-title">Información general del operador</h3>

            <div class="card-tools">
              <button type="button" class="btn btn-tool" data-card-widget="collapse">
                <i class="fas fa-minus"></i>
              </button>
              <button type="button" class="btn btn-tool" data-card-widget="remove">
                <i class="fas fa-times"></i>
              </button>
            </div>
          </div>
          <!-- /.card-header -->
          <form id="fmOperador">

          
          <div class="card-body">
            <div class="row">
              <div class="col-md-2">
                <div class="form-group">
                  <label for="txtClave">Clave de operador</label>
                  <input class="form-control form-control-sm" type="text" id="txtClave" name="Clave" style="text-transform:uppercase" maxlength="200">                               
              </div>
              </div>
              <div class="col-md-4">
                <div class="form-group">
                  <label>Nombres</label>
                  <input class="form-control form-control-sm" type="text" id="txtNombre" name="Nombre" style="text-transform:uppercase" maxlength="200">
                </div>
              </div>
            <div class="col-md-3">
                <div class="form-group">
                  <label>Apellido Paterno</label>
                  <input class="form-control form-control-sm" type="text" id="txtPaterno" name="Paterno" style="text-transform:uppercase" maxlength="200">
                </div>
              </div>
            <div class="col-md-3">
                <div class="form-group">
                  <label>Apellido Materno</label>
                  <input class="form-control form-control-sm" type="text" id="txtMaterno" style="text-transform:uppercase" maxlength="200">
                </div>
              </div>
              <!-- /.col -->
            </div>

            <div class="row">
                <div class="col-md-3">
                    <div class="form-group">
                        <label>RFC</label>
                        <input class="form-control form-control-sm" type="text" id="txtRFC" name="RFC" style="text-transform:uppercase" maxlength="20">
                    </div>
                 </div>
                <div class="col-md-3">
                    <div class="form-group">
                        <label>Teléfono Casa</label>
                     <input class="form-control form-control-sm" type="text" id="txtTelefono" maxlength="20">
                    </div>      
                </div>
                <div class="col-md-3">
                    <div class="form-group">

                        <label>Teléfono Celular</label>
                     <input class="form-control form-control-sm" type="text" id="txtCelular" maxlength="20">

                    </div>
                     
                </div>
                <div class="col-md-3">
                    <div class="form-group">
                        <label>Licencia</label>
                     <input class="form-control form-control-sm" type="text" id="txtLicencia" name="Licencia" style="text-transform:uppercase" maxlength="200">

                    </div>
                    </div>
            </div>
            <!-- /.row -->

         
          </div>
          </form>
          <!-- /.card-body -->
          <div class="card-footer">
              <div class="row">
                    <div class="col-md-6">
                        &nbsp;
                    </div>
                    <div class="col-md-3">
                        <a class="btn btn-block btn-default btn-xs" href="~/Operador">Cancelar</a>
                    </div>
                    <div class="col-md-3">
                        <button type="button" id="BtnNuevoOperador" class="btn btn-block btn-success btn-xs">Agregar</button>
                    </div>
           </div>
                
               
          </div>
        </div>
        <!-- /.card -->



    <!-- Card ADD -->
        <div id="cardDomicilio" class="card card-default collapsed-card">
