@section Scripts {
    <script src="~/js/TractorEdit.js"></script>
    <script src="~/js/Alerts.js"></script>
    <!-- jquery-validation -->
    <script src="~/plugins/jquery-validation/jquery.validate.min.js"></script>
    <script src="~/plugins/jquery-validation/additional-methods.min.js"></script>

}

<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0">Administración de tracto camiones</h1>
            </div><!-- /.col -->
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">Home</a></li>
                    <li class="breadcrumb-item"><a href="~/Tractor">Admin Tractos</a></li>
                    <li class="breadcrumb-item active">Editar</li>
                </ol>
            </div><!-- /.col -->
        </div><!-- /.row -->
    </div><!-- /.container-fluid -->
</div>

<div class="card card-default">
    <div class="card-header">
        <h3 class="card-title">Información general del tracto camión</h3>
    </div>
    <!-- /.card-header -->
    <form id="fmTracto">
    <input id="idTracto" type="hidden" value=@ViewBag.IdTracto />
    
    <div class="card-body">
        <div class="row">
            <div class="col-md-3">
                <div class="form-group">
                    <label for="txtClave">Clave Tracto</label>
                    <input class="form-control form-control-sm" type="text" id="txtClave" name="Clave" style="text-transform:uppercase" maxlength="200"> 
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label for="txtClave">Número Económico</label>
                    <input class="form-control form-control-sm" type="text" id="txtNumEconomico" name="NumEconomico" style="text-transform:uppercase" maxlength="200"> 
                </div>
            </div>
        </div>
        <!-- /.row -->
        <div class="row">
            <div class="col-md-3">
                <div class="form-group">
                    <label for="txtClave">Placas</label>
                    <input class="form-control form-control-sm" type="text" id="txtPlacas" name="Placas" style="text-transform:uppercase" maxlength="200"> 
                </div>
            </div>
            <div class="col-md-3">
                <div class="form-group">
                    <label for="txtClave">Modelo</label>
                    <input class="form-control form-control-sm" type="text" id="txtModelo" name="Modelo" style="text-transform:uppercase" maxlength="200"> 
                </div>
            </div>
            <div class="col-md-3">
                <div class="form-group">
                    <label for="txtClave">Año</label>
                    <input class="form-control form-control-sm" type="text" id="txtAnio" name="Anio" maxlength="4"> 
                </div>
            </div>
        </div>
        <!-- /.row -->
    </div>
    </form>
    <!-- /.card-body -->
    <div class="card-footer">
        <div class="row">
            <div class="col-md-3">
                &nbsp;
            </div>
            <div class="col-md-3">
                <a class="btn btn-block btn-default btn-xs" href="~/Tracto">Cancelar</a>
            </div> 
            <div class="col-md-3">
                <button id="BtnEditaTracto" class="btn btn-block btn-success btn-xs">Guardar</button>
            </div>
        </div>     
    </div>
    <!-- /.card-footer -->
</div>
<!-- /.card -->
