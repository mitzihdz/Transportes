<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0">Administración de Ubicaciones</h1>
            </div><!-- /.col -->
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">Home</a></li>
                    <li class="breadcrumb-item">Administración de Ubicaciones</li>
                </ol>
            </div><!-- /.col -->
        </div><!-- /.row -->
    </div><!-- /.container-fluid -->
</div>

<div class="card card-default">
    <div class="card-header">
        <h3 class="card-title">Listado general de ubicaciones</h3>
    </div>
    <!-- /.card-header -->
    <div class="card-body">
        <div class="row">
            <div class="col-md-10">
                &nbsp;    
            </div>
            <div class="col-md-2">
                <button type="button" class="btn btn-block btn-info btn-sm" onclick="OpenNew();">
                  Nueva Ubicación
                </button>
            </div>
        </div>
        <br />
        <div class="row">
             <div class="col-12">
                 <table id="tblUbicaciones" class="table table-bordered table-hover">
                    <thead>
                        <tr>
                            <th>Planta</th>
                            <th>Ruta</th>
                            <th>Editar</th>
                            <th>Eliminar</th>
                        </tr>
                    </thead>
                    <tbody></tbody>
                </table>
             </div>
        </div>
    </div>
</div>

<div id="modalUbicacion" class="modal" tabindex="-1" role="dialog">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Nuevo ubicación</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
       <form id="fmNewUbicacion">
           <div class="row">
               <div class="col-md-12">
                    <div class="form-group">
                        <label for="txtPlanta">Planta</label>
                        <input class="form-control form-control-sm" type="text" id="txtPlanta" name="Planta" style="text-transform:uppercase" maxlength="200"> 
                    </div>
                </div>
           </div>
           <div class="row">
               <div class="col-md-12">
                    <div class="form-group">
                        <label for="txtRuta">Ruta</label>
                        <textarea class="form-control form-control-sm" type="text" id="txtRuta" name="Ruta" style="text-transform:uppercase" maxlength="1000"></textarea>
                    </div>
                </div>
           </div>
       </form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
        <button type="button" id="BtnNuevaUbicacion" class="btn btn-primary">Agregar</button>
      </div>
    </div>
  </div>
</div>

<div id="modalEditUbicacion" class="modal" tabindex="-1" role="dialog">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Actualiza ubicación</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
       <form id="fmEditUbicacion">
           <input type="hidden" id="IdUbicacion" />
           <div class="row">
               <div class="col-md-12">
                    <div class="form-group">
                        <label for="txtPlantaEdit">Planta</label>
                        <input class="form-control form-control-sm" type="text" id="txtPlantaEdit" name="PlantaEdit" style="text-transform:uppercase" maxlength="200"> 
                    </div>
                </div>
           </div>
           <div class="row">
               <div class="col-md-12">
                    <div class="form-group">
                        <label for="txtRutaEdit">Ruta</label>
                        <textarea class="form-control form-control-sm" type="text" id="txtRutaEdit" name="RutaEdit" style="text-transform:uppercase" maxlength="1000"></textarea>
                    </div>
                </div>
           </div>
       </form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
        <button type="button" id="BtnEditaUbicacion" class="btn btn-primary">Guardar</button>
      </div>
    </div>
  </div>
</div>